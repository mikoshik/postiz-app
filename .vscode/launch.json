    "version": "0.2.0",
    "configurations": [
        {
            "name": "Отладчик Python: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app:app",
                "--host", "0.0.0.0",
                "--port", "8000"
            ],
            "cwd": "${workspaceFolder}/python_service",
            "python": "${workspaceFolder}/python_service/venv/Scripts/python.exe",
            "jinja": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/python_service",
                "PYTHONUNBUFFERED": "1"
            },
            "console": "integratedTerminal"
        }
    ]
}